@model SprintIssuesViewModel

<h1>Manage Issues for Sprint</h1>

<form asp-action="ManageIssues" method="post">
    <input type="hidden" asp-for="SprintId" />

    <table class="table">
        <thead>
            <tr>
                <th>Select</th>
                <th>Issue Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var issue in Model.AvailableIssues)
        {
            <tr>
                <td>
                        <input type="checkbox"
                               asp-for="SelectedIssueIds"
                               value="@issue.Id"
                         />
                </td>
                <td>@issue.Name</td>
                <td>@issue.Description</td>
            </tr>
        }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

